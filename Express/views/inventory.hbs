  <header id="header">
    <div class="inner">
      <div class="logo"> <a href="/recipe">Recipe Finder</a></div>
      <nav id="nav">
          <a href="/recipe/logout">Logout</a>
      </nav>
    </div>
  </header>

  <h1> My Pantry</h1>
  {{#if pantry}}
  <a class="waves-effect waves-light btn modal-trigger" href="#modal3">Throw out Ingredients</a>

  <!-- Modal Structure -->
  <div id="modal3" class="modal">
    <div class="modal-content">
      {{#if pantry}}
      <form method="POST" action="/recipe/inventory/delete">
        <div>
            <h5> Fridge: </h5>
              {{#each  pantry}}
                <label>
                  <input type="checkbox" class="filled-in" name="ingredient" value="{{name}}"/>
                  <span>{{name}}</span>
                </label><br>
              {{/each}}
            </div>
            <div>
              <button type="submit" class="btn modal-action modal-close waves-green remove">Remove</button>
            </div>
      </form>
      {{else}}
        <form method ="GET" action="/recipe/pantry">
          <div>
            <h5> You do not have anything to remove </h5>
          </div>
          <div>
            <button type="submit" class="btn modal-action modal-close waves-green">Pantry</button>
          </div>
      {{/if}}
    </div>
  </div>

    <div class="container-fluid">
          <div class="row">
          {{#each pantry as |ingredient|}}
            <div class="col-md-8 col-sm-12 col-xs-20 box">
                <h1 class = "pantry-ingredient">{{ingredient.name}}</h1>
                <h3 class = "pantry-quantity">{{ingredient.quantity}}</h3>
                <button id="trash" type="image" class="remove-button">
                  <img src="../img/remove.jpg" class="img-thumbnail" onclick="" />
                </button>
            </div>
            {{/each}}
          </div>
        </div>

    {{else}}
      <h2> Your Pantry is Empty</h2>
      <a href="/recipe/pantry">
            SET UP YOUR PANTRY HERE!
      </a>
      {{/if}}


      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
